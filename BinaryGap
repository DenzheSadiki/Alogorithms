 

using System;


class Solution {

    public int maxcount;
    public int count;
    public bool first=false;
    public bool second = false;
    public int firstindex ;

      public int solution(int N)
      {
    
        var binary = Convert.ToString(N, 2);  
        var array = binary.ToString().ToCharArray();

       
        for(int i=0;i<array.Length-1;i++)
        {			
		if(int.Parse(array[i].ToString())==1 &&  first==false)
		{
			first =true;
			firstindex = i;
		}

		if(int.Parse(array[i].ToString())==0 && first==true)
		{
			count++;
		}

		if(int.Parse(array[i].ToString())==1 && firstindex != i)
		{
			first =false;
			maxcount = Math.Max(count,maxcount);
			count =0;
		}

	}

        return maxcount;
    }
}
